@model demo1_mp.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết sản phẩm</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên sản phẩm</dt>

        <dd>
            @Html.DisplayFor(model => model.NamePro)
        </dd>

        <dt>Mô tả</dt>

        <dd>
            @Html.DisplayFor(model => model.DecriptionPro)
        </dd>

        <dt>Giá</dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>Hình ảnh</dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePro)
        </dd>

        <dt>Danh mục</dt>

        <dd>
            @Html.DisplayFor(model => model.Category1.NameCate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
