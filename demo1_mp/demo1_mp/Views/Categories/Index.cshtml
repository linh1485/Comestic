@model IEnumerable<demo1_mp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh mục sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Tên Danh Mục</th>
        <th>Tùy Chỉnh</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IDCate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameCate)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate.Trim() }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate.Trim() }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate.Trim() })
    </td>
</tr>
}

</table>
