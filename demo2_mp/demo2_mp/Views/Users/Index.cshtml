@model IEnumerable<demo2_mp.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/css/admin/index.css" rel="stylesheet" />

<div id="container-dmsp">
    <h2>Danh sách người dùng</h2>
    <br />
    <div class="table-dmsp">
        <table>
            <thead>
                <tr>
                    <th>Tên tài khoản</th>
                    <th>Trạng thái</th>
                    <th>Mật khẩu</th>
                    <th>Email</th>
                    <th>Số Điện Thoại</th>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Địa chỉ</th>
                    <th>Ảnh</th>
                    <th class="thaotac">Thao tác</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PasswordUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Img)
                        </td>
                        <td class="thaotac">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

