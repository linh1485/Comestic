@model demo2_mp.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa người dùng</h2>

<h3>Bạn có muốn xóa người dùng này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" style="font-size: 20px; color: #603838;">
        <dt>Tên tài khoản  </dt>
        <dd>
            @Html.DisplayFor(model => model.NameUser)
        </dd>

        @*<dt>
                Trạng thái
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoleUser)
            </dd>*@

        <dt>
            Password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PasswordUser)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Giới tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOB)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Img)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>

<style>
    h2 {
        font-size: 30px;
        color: #603838;
        text-align: center;
    }

    h3 {
        font-size: 20px;
        color: #603838;
    }

    h4 {
        font-size: 20px;
        color: #603838;
    }
    /* Style cho container chứa dl, dt, dd */
    .custom-dl-container {
        display: flex;
        flex-wrap: wrap;
        border: 3px solid #ddd; /* Đường viền */
        padding: 10px; /* Phần đệm */
        border-radius: 8px; /* Bo góc */
    }

    /* Style cho dt */
    dt {
        flex-basis: 200px; /* Điều chỉnh chiều rộng của dt */
        font-weight: bold; /* Đậm chữ cho dt */
        margin-right: 5px; /* Khoảng cách giữa dt và dd */
    }

    /* Style cho dd */
    dd {
        flex-grow: 1;
        margin: 0; /* Loại bỏ margin mặc định */
    }
    /* Loại bỏ đường gạch chân từ liên kết */
    a {
        text-decoration: none;
        color: inherit;
    }
</style>



