<!-- Thêm thư viện & thay đổi mô hình để sử dụng thư viện phân trang -->
@using PagedList.Mvc;

@model PagedList.IPagedList<demo2_mp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/css/admin/index.css" rel="stylesheet" />

<h2>Sản Phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Giá
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DecriptionPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="~/Content/img/@item.ImagePro" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category1.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>

<div class="menu-page">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<style>
    .menu-page {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .menu-page li {
            display: inline;
            text-align: center;
        }

        .menu-page a {
            text-decoration: none;
            color: gray;
            margin: 10px;
            font-size: 20px;
        }

            .menu-page a:hover {
                color: #9F8772;
            }
</style>

