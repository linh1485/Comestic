@model demo2_mp.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2>Cập nhật</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cập nhật sản phẩm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductID)

    <div class="form-group">
        Tên sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm" } })
            @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Mô tả ngắn
        <div class="col-md-10">
            @Html.EditorFor(model => model.ShortDec, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mô tả ngắn" } })
            @Html.ValidationMessageFor(model => model.ShortDec, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Mô tả
        <div class="col-md-10">
            @Html.EditorFor(model => model.DecriptionPro, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mô tả dài" } })
            @Html.ValidationMessageFor(model => model.DecriptionPro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Dung lượng
        <div class="col-md-10">
            @Html.EditorFor(model => model.DungLuong, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập dung lượng" } })
            @Html.ValidationMessageFor(model => model.DungLuong, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Loại sản phẩm
        <div class="col-md-10">
            @Html.DropDownList("Category", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập giá" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hình ảnh 1
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ImagePro, null, new { type = "file", @class = "form-control", placeholder = "Chọn file" })
            @Html.ValidationMessageFor(model => model.ImagePro, "", new { @class = "text-danger" })
            <img src="~/Content/img/@Model.ImagePro" width="200" height="200" />
        </div>
    </div>
    <div class="form-group">
        Hình ảnh 2
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Image1, null, new { type = "file", @class = "form-control", placeholder = "Chọn file" })
            @Html.ValidationMessageFor(model => model.Image1, "", new { @class = "text-danger" })
            <img src="~/Content/img/@Model.Image1" width="200" height="200" />
        </div>
    </div>
    <div class="form-group">
        Hình ảnh 3
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Image2, null, new { type = "file", @class = "form-control", placeholder = "Chọn file" })
            @Html.ValidationMessageFor(model => model.Image2, "", new { @class = "text-danger" })
            <img src="~/Content/img/@Model.Image2" width="200" height="200" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cấp nhật" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

<style>
        a {
            text-decoration: none;
            color: inherit;
        }

        h2 {
            font-size: 20px;
            color: #603838;
            text-align: center;
        }

        h4 {
            text-align: center;
            font-size: 30px;
            color: #603838;
        }

        .form-group {
            font-size: 20px;
            color: #603838;
            /*        border: 3px solid #603838;
    */ padding: 5px;
            width: 400px
        }
</style>