@model demo2_mp.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn muốn xóa sản phẩm này?</h3>
<div>
    @*<h4>Sản phẩm</h4>*@
    <hr />
    <dl class="dl-horizontal" style="font-size: 20px; color: #603838;">
        <dt>Tên sản phẩm</dt>

        <dd>@Html.DisplayFor(model => model.NamePro)</dd>

        <dt>Mô tả ngắn</dt>

        <dd>@Html.DisplayFor(model => model.ShortDec)</dd>

        <dt>Mô tả dài</dt>

        <dd>@Html.DisplayFor(model => model.DecriptionPro)</dd>

        <dt>Loại sản phẩm</dt>

        <dd>@Html.DisplayFor(model => model.Category1.NameCate)</dd>

        <dt>Dung lượng</dt>

        <dd>@Html.DisplayFor(model => model.DungLuong)</dd>

        <dt>Giá</dt>

        <dd>@Html.DisplayFor(model => model.Price)</dd>

        <dt>Hình ảnh 1</dt>

        <dd>@Html.DisplayFor(model => model.ImagePro)</dd>

        <dt>Hình ảnh 2</dt>

        <dd>@Html.DisplayFor(model => model.Image1)</dd>

        <dt>Hình ảnh 3</dt>

        <dd>@Html.DisplayFor(model => model.Image2)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>



<style>
    h2 {
        font-size: 30px;
        color: #603838;
        text-align: center;
    }
    h3 {
        font-size: 20px;
        color: #603838;
    }
    h4 {
        font-size: 20px;
        color: #603838;
    }
    /* Style cho container chứa dl, dt, dd */
    .custom-dl-container {
        display: flex;
        flex-wrap: wrap;
        border: 3px solid #ddd; /* Đường viền */
        padding: 10px; /* Phần đệm */
        border-radius: 8px; /* Bo góc */
    }

    /* Style cho dt */
    dt {
        flex-basis: 200px; /* Điều chỉnh chiều rộng của dt */
        font-weight: bold; /* Đậm chữ cho dt */
        margin-right: 5px; /* Khoảng cách giữa dt và dd */
    }

    /* Style cho dd */
    dd {
        flex-grow: 1;
        margin: 0; /* Loại bỏ margin mặc định */
    }
    /* Loại bỏ đường gạch chân từ liên kết */
    a {
        text-decoration: none;
        color: inherit;
    }
</style>


