@model demo2_mp.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn muốn xóa sản phẩm này?</h3>
<div>
    <h4>Sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên sản phẩm</dt>

        <dd>@Html.DisplayFor(model => model.NamePro)</dd>

        <dt>Mô tả ngắn</dt>

        <dd>@Html.DisplayFor(model => model.ShortDec)</dd>

        <dt>Mô tả dài</dt>

        <dd>@Html.DisplayFor(model => model.DecriptionPro)</dd>

        <dt>Loại sản phẩm</dt>

        <dd>@Html.DisplayFor(model => model.Category1.NameCate)</dd>

        <dt>Dung lượng</dt>

        <dd>@Html.DisplayFor(model => model.DungLuong)</dd>

        <dt>Giá</dt>

        <dd>@Html.DisplayFor(model => model.Price)</dd>

        <dt>Hình ảnh 1</dt>

        <dd>@Html.DisplayFor(model => model.ImagePro)</dd>

        <dt>Hình ảnh 2</dt>

        <dd>@Html.DisplayFor(model => model.Image1)</dd>

        <dt>Hình ảnh 3</dt>

        <dd>@Html.DisplayFor(model => model.Image2)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
