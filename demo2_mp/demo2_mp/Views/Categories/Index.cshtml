@model IEnumerable<demo2_mp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<link href="~/Content/css/admin/index.css" rel="stylesheet" />


@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>



<div class="container" style=" color: #603838;">
    <div class="row">
        <h1 class="text-center" style="width:900px">Danh sách loại sản phẩm </h1>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title"></h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            
                            <h2>@Html.ActionLink("Thêm mới", "Create")</h2>
                            

                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>

                                <th class="hidden-xs">ID</th>
                                <th>Loại sản phẩm</th>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td class="hidden-xs">
                                        @Html.DisplayFor(modelItem => item.IDCate)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.NameCate) </td>
                                    <td align="center">
                                        @*<a class="btn btn-default"><em class="fa fa-pencil"></em></a>*@
                                        <!--<div class="btn btn-default">@Html.ActionLink("Sửa", "Edit", new { id = item.IDCate })</div>
                                        <div class="btn btn-default">@Html.ActionLink("Xóa", "Delete", new { id = item.IDCate})</div>-->
                                        @*<a class="btn btn-danger"><em class="fa fa-trash"></em></a>*@


                                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate })

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/jquery-1.11.1.min.js"></script>