@model IEnumerable<demo2_mp.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/css/admin/index.css" rel="stylesheet" />


@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>



<div class="container" style=" color: #603838;">
    <div class="row">
        <h1 class="text-center" style="width:900px">Danh sách loại sản phẩm </h1>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title"></h3>
                        </div>
                        @*<div class="col col-xs-6 text-right">

                            <h2>@Html.ActionLink("Thêm mới", "Create")</h2>


                        </div>*@
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>Ngày Giao Hàng</th>
                                <th>Địa Chỉ Giao Hàng</th>
                                <th>Khách Hàng</th>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOrder)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.FullName)
                                    </td>
                                    @*<td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>*@
                                    <td class="thaotac">
                                        <!--<div class="btn btn-default">
                     <a href="/Orders/ChitietDH/@item.ID">Chi tiet</a>-->
                                        @*@Html.ActionLink("Chi tiết", "Detail", new { id = item.ID })*@
                                        <!--</div>-->
                                        <div class="btn btn-default">
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/jquery-1.11.1.min.js"></script>

<style>
    /* Loại bỏ đường gạch chân từ liên kết */
    a {
        text-decoration: none;
        color: inherit;
    }
</style>
