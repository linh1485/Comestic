@model demo2_mp.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@200;300;400;500&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/css/admin/login.css">
</head>
<body style=" background-color: #ecf0f1; ">
    @using (Html.BeginForm("LoginAcount", "Admin"))
    {
        @Html.AntiForgeryToken()

        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-7 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-user-o"></span>
                            </div>
                            <h3 class="text-center mb-4">Đăng nhập Admin</h3>
                            <form action="#" class="login-form">
                                @*<div class="form-group">
                                        <input type="text" name="UserAdmin" class="input100 form-control rounded-left" placeholder="Username">
                                    </div>
                                    <div class="form-group d-flex">
                                        <input type="password" name="PassAdmin" class="input100 form-control rounded-left" placeholder="Mật khẩu">
                                    </div>*@
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.NameUser, new { style = "filed-validation-error", placeholder = "Username" })
                                    @Html.ValidationMessageFor(model => model.NameUser)
                                </div>
                                <div class="form-group d-flex">

                                    <p>@Html.PasswordFor(model => model.PasswordUser, new { placeholder = "Password" })</p>
                                    @Html.ValidationMessageFor(model => model.PasswordUser)
                                    @if (ViewBag.ErrorInfo != null)
                                    {
                                        <p>@ViewBag.ErrorInfo</p>
                                    }
                                    <br />
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng nhập</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </section>

        <script src="~/Content/jquery.min.js"></script>
        <script src="~/Content/popper.js"></script>
        <script src="~/Content/main.js"></script>
        <script src="~/Content/bootstrap.min.js"></script>
    }
</body>
</html>
